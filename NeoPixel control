// 정방향 역방향
#include <Adafruit_NeoPixel.h>

#define PIN1 6           // 첫 번째 네오픽셀 링 데이터 핀
#define PIN2 7           // 두 번째 네오픽셀 링 데이터 핀
#define NUM_LEDS1 16     // 첫 번째 네오픽셀 링 LED 개수
#define NUM_LEDS2 16     // 두 번째 네오픽셀 링 LED 개수

Adafruit_NeoPixel ring1 = Adafruit_NeoPixel(NUM_LEDS1, PIN1, NEO_GRB + NEO_KHZ800);
Adafruit_NeoPixel ring2 = Adafruit_NeoPixel(NUM_LEDS2, PIN2, NEO_GRB + NEO_KHZ800);

void setup() {
  ring1.begin();  // 첫 번째 네오픽셀 링 초기화
  ring2.begin();  // 두 번째 네오픽셀 링 초기화
  ring1.show();   // 첫 번째 링 LED 초기화 상태 설정
  ring2.show();   // 두 번째 링 LED 초기화 상태 설정
}

void loop() {
  // 첫 번째 링: 정방향
  for (int i = 0; i <= NUM_LEDS1; i++) {
    if(i==0)
    {
      ring1.setPixelColor(i, ring1.Color(0, 255, 0));  // 초록색
      ring2.setPixelColor(i, ring2.Color(255, 0, 0));  // 빨간색 (반대 방향)
    }
    if (i % 3 == 0) {
      ring1.setPixelColor(i, ring1.Color(255 ,255, 255));  // 초록색
      ring2.setPixelColor(NUM_LEDS2 -1 - i, ring2.Color(255, 0, 0));  // 빨간색 (반대 방향)
    } else if (i % 3 == 1) {
      ring1.setPixelColor(i, ring1.Color(0, 0, 255));  // 파란색
      ring2.setPixelColor(NUM_LEDS2 -1- i, ring2.Color(0, 255, 255));  // 청록색 (반대 방향)
    } else if (i % 3 == 2) {
      ring1.setPixelColor(i, ring1.Color(255, 255, 0)); // 노란색
      ring2.setPixelColor(NUM_LEDS2 -1- i, ring2.Color(255, 0, 255));  // 분홍색 (반대 방향)
    }
    ring1.show();  // 첫 번째 링 LED 업데이트
    ring2.show();  // 두 번째 링 LED 업데이트
    delay(100);    // 현재 LED 상태를 유지할 시간
  }

  // 모든 LED 끄기
  turnOffAllLeds(ring1, NUM_LEDS1);
  turnOffAllLeds(ring2, NUM_LEDS2);

  delay(500); // 꺼진 상태 유지
}

void turnOffAllLeds(Adafruit_NeoPixel& ring, int numLeds) {
  for (int i = 0; i < numLeds; i++) {
    ring.setPixelColor(i, ring.Color(0, 0, 0));  // 검정색으로 끄기
  }
  ring.show();  // 변경 사항 적용
}

// 정방향 정방향
#include <Adafruit_NeoPixel.h>

#define PIN1 6           // 첫 번째 네오픽셀 링 데이터 핀
#define PIN2 7           // 두 번째 네오픽셀 링 데이터 핀
#define NUM_LEDS1 16     // 첫 번째 네오픽셀 링 LED 개수
#define NUM_LEDS2 16     // 두 번째 네오픽셀 링 LED 개수

Adafruit_NeoPixel ring1 = Adafruit_NeoPixel(NUM_LEDS1, PIN1, NEO_GRB + NEO_KHZ800);
Adafruit_NeoPixel ring2 = Adafruit_NeoPixel(NUM_LEDS2, PIN2, NEO_GRB + NEO_KHZ800);

void setup() {
  ring1.begin();  // 첫 번째 네오픽셀 링 초기화
  ring2.begin();  // 두 번째 네오픽셀 링 초기화
  ring1.show();   // 첫 번째 링 LED 초기화 상태 설정
  ring2.show();   // 두 번째 링 LED 초기화 상태 설정
}

void loop() {
  // 첫 번째 링: 색상 변경
  for (int i = 0; i < NUM_LEDS1; i++) {
    if (i % 3 == 0) {
      ring1.setPixelColor(i, ring1.Color(0, 255, 0));  // 초록색
      ring2.setPixelColor(i, ring2.Color(255, 0, 0));  // 빨간색
    } else if (i % 3 == 1) {
      ring1.setPixelColor(i, ring1.Color(0, 0, 255));  // 파란색
      ring2.setPixelColor(i, ring2.Color(0, 255, 255));  // 청록색
    } else if (i % 3 == 2) {
      ring1.setPixelColor(i, ring1.Color(255, 255, 0)); // 노란색
      ring2.setPixelColor(i, ring2.Color(255, 0, 255));  // 분홍색
    }
    ring1.show();  // 첫 번째 링 LED 업데이트
    ring2.show();  // 두 번째 링 LED 업데이트
    delay(100);    // 현재 LED 상태를 유지할 시간
  }

  // 모든 LED 끄기
  turnOffAllLeds(ring1, NUM_LEDS1);
  turnOffAllLeds(ring2, NUM_LEDS2);

  delay(500); // 꺼진 상태 유지
}

